---
import { Card, CardContent, CardFooter } from './ui/card';
import { Github, GitFork, ExternalLink } from 'lucide-react';

interface Props {
  title: string;
  description: string;
  repo: string;
  contributions: number;
}

const { title, description, repo, contributions } = Astro.props;
const contributionsLink = `https://github.com/${repo}`;
---

<Card className="flex flex-col h-full border-1 border-primary shadow-lg theme-border transition-all duration-300 hover:shadow-xl hover:scale-[1.02]">
  <CardContent className="flex-grow p-4">
    <h3 class="font-semibold text-xl mb-2">{title}</h3>
    <p class="text-sm text-muted-foreground mb-4">{description}</p>
    <div class="flex flex-col gap-3">
      <a
        href={contributionsLink}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-sm font-semibold text-primary hover:underline group"
      >
        <GitFork className="h-4 w-4" />
        <span>{contributions} contributions</span>
        <ExternalLink className="h-3 w-3 opacity-0 group-hover:opacity-100 transition-opacity" />
      </a>
      <a
        href={`https://github.com/${repo}`}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors"
      >
        View Repository
        <Github className="h-4 w-4" />
      </a>
    </div>
  </CardContent>
</Card>

