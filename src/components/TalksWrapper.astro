import TalkCard from "./TalkCard.astro";

const talks = [
  {
    title: "Performance Optimization in React Native",
    event: "React Mumbai",
    description: "Deep dive into performance tracking and optimization techniques for React Native applications",
    link: "https://www.youtube.com/watch?v=mIqMVxKC4e4&t=109s",
    type: "video" as const,
    thumbnail: "https://img.youtube.com/vi/mIqMVxKC4e4/hqdefault.jpg"
  },
  {
    title: "Building Better React Native Apps",
    event: "React Nexus",
    description: "Exploring modern React Native development practices and best practices",
